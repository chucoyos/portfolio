
<div class="container" style="margin-top: 80px">
    <p id="notice"><%= notice %></p>


        <section class="page-section" id="services">
              <div class="container">
                  <div class="text-center">
                      <h2 class="section-heading text-uppercase">Skills</h2>
                      <h3 class="section-subheading text-muted">Subheading ipsum dolor sit amet consectetur.</h3>
                  </div>

                  <div class="row text-center">
                

                  <% @skills.each do |skill| %>
                      <div class="col-md-4">
                          <span class="fa-stack fa-4x">
                              <i class="fas fa-circle fa-stack-2x text-primary"></i>
                              <i class="<%= skill.icon %> fa-stack-1x fa-inverse"></i>
                          </span>
                          <h4 class="my-3"><%= skill.name %></h4>
                          <p class="text-muted"><%= skill.description %>.</p>
                      </div>

                  <% end %>
                  
                      
                  </div>
              </div>
        </section> 

  <table class="table table-dark">
    <thead>
      <tr class="table-active">
        <th scope="row">Name</th>
        <th scope="row">Description</th>
        <th scope="row">Icon</th>
        <th scope="row">Show</th>
        <th scope="row">Edit</th>
        <th scope="row">Destroy</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @skills.each do |skill| %>
        <tr class="table-active">
          <td class="table-active"><%= skill.name %></td>
          <td class="table-active"><%= skill.description %></td>
          <td class="table-active"><%= skill.icon %></td>
          <td class="table-active"><%= link_to 'Show', skill %></td>
          <td class="table-active"><%= link_to 'Edit', edit_skill_path(skill) %></td>
          <td class="table-active"><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Skill', new_skill_path, class:'btn btn-outline-primary btn-lg' %>
  <%= link_to 'logout', destroy_user_session_path, method: :delete, class:'btn btn-outline-danger btn-lg' %>
</div>
